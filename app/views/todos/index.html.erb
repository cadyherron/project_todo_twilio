<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Create new to-do item</button>

  <%= render partial: "form", locals: {:todo => @todo} %>


<table>

  <tr>
    <th>Id</th>
    <th>Item</th>
    <th>Completion Date</th> 
  </tr>

  <% @todos.each do |todo| %>

    <%= render partial: "todo_item", locals: {:todo => todo} %>

  <% end %>

</table>

